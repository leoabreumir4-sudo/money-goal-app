# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/moneygoal?sslmode=require

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Application Environment
NODE_ENV=development
VITE_APP_URL=http://localhost:5173

# Admin Account (first user with this openId becomes admin)
OWNER_OPEN_ID=admin@example.com

# OpenAI API (Required for AI Chat feature)
OPENAI_API_KEY=sk-proj-...

# Google Maps API (Required - no default)
GOOGLE_API_KEY=

# SERP API for Web Search (Required - no default)
SERPAPI_KEY=

# Wise Bank Integration (Optional)
WISE_API_URL=https://api.transferwise.com
WISE_WEBHOOK_SECRET=

# Plaid Integration (Optional)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# Twilio WhatsApp Integration (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# WhatsApp Cloud API - Alternative to Twilio (Optional)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_WEBHOOK_TOKEN=

# Migration Control (Set to 1 only during deployment with migrations)
MIGRATE=0
SKIP_MIGRATE=0
